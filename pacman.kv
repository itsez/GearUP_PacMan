<TrackH>
    size: (root.length),32
    canvas:
        Color:
            rgb: 0,0,0
        Rectangle:
            size: self.size
            pos: self.pos


<TrackV>
    size: 32,(root.length)
    canvas:
        Color:
            rgb: 0,0,0
        Rectangle:
            size: self.size
            pos: self.pos


<PacGame>:
    pac: pac_id
    blinky: red_id
    pinky: pink_id
    clyde: orange_id
    inky: blue_id
    status: status_id
    status2: status_id2

    canvas:
        Color:
            rgb: 0,0,1
        Rectangle:
            pos: 38,58
            size: 612, 644
        Rectangle:
            pos: 40, 60
            size: 608, 640

    Label:
        font_size: 32
        x: 500
        top: root.top - 60
        text: "Score: " + str(root.score)

    Label:
        id: status_id
        font_size: 70
        color: [1,1,0,1]
        x: 310
        top: 600
        text: ''

    Label:
        id: status_id2
        font_size: 20
        color: [1,1,0,1]
        x: 310
        top: 550
        text: ''


    Label:
        font_size: 32
        x: 60
        top: root.top - 60
        text: "Lives: " + str(root.lives)

    Pac:
        id: pac_id
        x: 40 + (32 * 9)
        y: 60 + (32 * 4)

    Blinky:
        id: red_id
        x: 40 + (32 * 9)
        y: 60 + (32 * 12)

    Pinky:
        id: pink_id
        x: 40 + (32 * 9)
        y: 60 + (32 * 10)

    Inky:
        id: blue_id
        x: 40 + (32 * 8)
        y: 60 + (32 * 10)

    Clyde:
        id: orange_id
        x: 40 + (32 * 10)
        y: 60 + (32 * 10)

