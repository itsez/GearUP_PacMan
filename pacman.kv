<Pac>:
    size: 32, 32
    canvas:
        Color:
            rgb: 255,238,0
        Ellipse:
            pos: self.pos
            size: self.size
            angle_start: (root.start_angle)
            angle_end: (root.end_angle)
<Ghost>:
    size: 32,32
    canvas:
        Color:
            rgb: 1,0,0
        Ellipse:
            pos: self.pos
            size: 30,30
            angle_start: -90
            angle_end: 90
        Quad:
            points: self.center_x - 15, self.center_y, self.center_x -15, self.center_y - 5, self.center_x + 15, self.center_y - 5, self.center_x + 15, self.center_y
        Triangle:
            points: self.center_x - 15, self.center_y - 15, self.center_x - 15, self.center_y - 5, self.center_x - 5, self.center_y - 5
        Triangle:
            points: self.center_x, self.center_y - 15, self.center_x - 10, self.center_y - 5, self.center_x  + 10, self.center_y - 5
        Triangle:
            points: self.center_x + 15, self.center_y - 15, self.center_x + 5, self.center_y - 5, self.center_x  + 15, self.center_y - 5
        Color:
            rgb: 1,1,1
        Ellipse:
            size: 5,10
            pos: self.center_x - 7, self.center_y
        Ellipse:
            size: 5,10
            pos: self.center_x + 2, self.center_y
        Color:
            rgb: 0,0,1
        Ellipse:
            size: 2,2
            pos: self.center_x - 5.5, self.center_y + 3.5
        Ellipse:
            size: 2,2
            pos: self.center_x + 3.5, self.center_y + 3.5


<TrackH>
    size: (root.length),32
    canvas:
        Color:
            rgb: 1,0,0
        Rectangle:
            size: self.size
            pos: self.pos


<TrackV>
    size: 32,(root.length)
    canvas:
        Color:
            rgb: 0,1,0
        Rectangle:
            size: self.size
            pos: self.pos


<PacGame>:
    pac: pac_id
    ghost: red_id
    track1H: Track_1H
    track1V: Track_1V
    track2H: Track_2H
    track2V: Track_2V
    track3H: Track_3H
    track3V: Track_3V
    track4V: Track_4V
    track4H: Track_4H
    track5H: Track_5H
    track5V: Track_5V
    track6V: Track_6V
    track7V: Track_7V
    track8V: Track_8V
    track9V: Track_9V
    track10V: Track_10V

    canvas:
        Color:
            rgb: 0,0,1
        Rectangle:
            pos: 40, 40
            size: 640, 704
    TrackH:
        id: Track_1H

    TrackV:
        id: Track_1V

    TrackH:
        id: Track_2H

    TrackH:
        id: Track_3H

    TrackV:
        id: Track_2V

    TrackV:
        id: Track_3V

    TrackV:
        id: Track_4V

    TrackH:
        id: Track_4H

    TrackH:
        id: Track_5H

    TrackV:
        id: Track_5V

    TrackV:
        id: Track_6V

    TrackV:
        id: Track_7V

    TrackV:
        id: Track_8V

    TrackV:
        id: Track_9V

    TrackV:
        id: Track_10V

    Pac:
        id: pac_id
        x: 40 + (32 *10)
        y: 60

    Ghost:
        id: red_id
        color: 1,0,0
        x: self.parent.center_x - 100
        y: self.parent.center_y + 100
