<Pac>:
    size: 32, 32
    canvas:
        Color:
            rgb: 255,238,0
        Ellipse:
            pos: self.pos
            size: self.size
            angle_start: (root.start_angle)
            angle_end: (root.end_angle)
<Blinky>:
    size: 32,32
    canvas:
        Color:
            rgb: self.color[0],self.color[1],self.color[2]
        Ellipse:
            pos: self.x, self.y
            size: 32-1,32
            angle_start: -90
            angle_end: 90
        Quad:
            points: self.center_x - 16, self.center_y, self.center_x -16 , self.center_y - 5, self.center_x + 15, self.center_y - 5, self.center_x + 15, self.center_y
        Triangle:
            points: self.center_x - 16, self.center_y - 14, self.center_x - 16, self.center_y - 4, self.center_x - 6, self.center_y - 4
        Triangle:
            points: self.center_x, self.center_y - 14, self.center_x - 10, self.center_y - 4, self.center_x  + 10, self.center_y - 4
        Triangle:
            points: self.center_x + 15, self.center_y - 15, self.center_x + 5, self.center_y - 4, self.center_x  + 15, self.center_y - 4
        Color:
            rgb: 1,1,1
        Ellipse:
            size: 5,10
            pos: self.center_x - 7, self.center_y
        Ellipse:
            size: 5,10
            pos: self.center_x + 2, self.center_y
        Color:
            rgb: 0,0,1
        Ellipse:
            size: 2,2
            pos: self.center_x - 5.5, self.center_y + 3.5
        Ellipse:
            size: 2,2
            pos: self.center_x + 3.5, self.center_y + 3.5

