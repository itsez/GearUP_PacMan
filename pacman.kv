<PacGame>:
    pac: pac_id
    blinky: red_id
    pinky: pink_id
    clyde: orange_id
    inky: blue_id
    status: status_id
    status2: status_id2

    canvas:
        Color:
            rgb: 0,0,1
        Rectangle:
            pos: root.x_marg, root.y_marg
            size: root.map_l, root.map_h
        Rectangle:
            pos: root.x_marg - 2, root.y_marg - 2
            size: root.map_l + 4, root.map_h + 4

    Label:
        font_size: 32
        x: 500
        top: root.top + root.y_marg
        text: "Score: " + str(root.score)

    Label:
        id: status_id
        font_size: 70
        color: [1,1,0,1]
        x: root.map_l / 2
        top: 540
        text: ''

    Label:
        id: status_id2
        font_size: 20
        color: [1,1,0,1]
        x: root.map_l / 2
        top: 500
        text: ''


    Label:
        font_size: 32
        x: 60
        top: root.top + root.y_marg
        text: "Lives: " + str(root.lives)

    Pac:
        id: pac_id
        x: root.x_marg + (root.tile * 9)
        y: root.y_marg + (root.tile * 4)

    Blinky:
        id: red_id
        x: root.x_marg + (root.tile * 9)
        y: root.y_marg + (root.tile * 12)

    Pinky:
        id: pink_id
        x: root.x_marg + (root.tile * 9)
        y: root.y_marg + (root.tile * 10)

    Inky:
        id: blue_id
        x: root.x_marg + (root.tile * 8)
        y: root.y_marg + (root.tile * 10)

    Clyde:
        id: orange_id
        x: root.x_marg + (root.tile * 10)
        y: root.y_marg + (root.tile * 10)

